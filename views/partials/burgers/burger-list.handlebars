<li class="list-group-item">
	<div class="row">

		<div class="col-xs-1 col-sm-1 col-md-1 col-lg-1">
			<img src="assets/img/burger-icon.svg" alt="Hamburger Icon">
		</div>

		<div class="col-xs-7 col-sm-7 col-md-7 col-lg-7">
			{{burger_name}}
		</div>

		<div class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
			{{#unless devoured}}
				<button ctype="button" class="btn btn-xs btn-primary devour-burger" data-id="{{id}}" devoured="{{devoured}}">DEVOUR!</button>
			{{/unless}}
			{{#if devoured}}
				<button class="btn btn-xs btn-danger delete-burger" data-id="{{this.id}}">DELETE!</button>
			{{/if}}
		</div>
	</div>

</li>